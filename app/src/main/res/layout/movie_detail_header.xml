<?xml version="1.0" encoding="utf-8"?>
<com.example.movie.ui.custom.CollapsibleToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/movie_detail_app_bar_min_height"
    android:fitsSystemWindows="false"
    app:layoutDescription="@xml/scene_movie_detail_header"
    app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed"
    android:id="@+id/movie_detail_header">

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_detail_app_bar_height"
        android:src="@drawable/ic_launcher_background" />

    <LinearLayout
        android:id="@+id/genresContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/movieTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="300dp"
        android:textSize="24dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/pubYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16dp"/>



</com.example.movie.ui.custom.CollapsibleToolbar>