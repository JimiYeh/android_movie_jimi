<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/item_movie_detail_label"
        android:id="@+id/ratingLabelContainer"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ratingLabelContainer"
        android:numStars="5"
        android:stepSize="0.1"
        android:progressTint="@color/tabIndicator"
        android:secondaryProgressTint="@color/lighter_gray"
        android:indeterminateTint="@color/tabIndicator"
        android:isIndicator="true"
        tools:rating="2.2"/>

</androidx.constraintlayout.widget.ConstraintLayout>